\RequirePackage{ifthen}

\mode<presentation>

\usefonttheme{default}
\usepackage{themes/beamercolorthemewunew}
\usepackage{themes/beamerinnerthemewunew}
\usepackage{themes/beamerouterthemewunew}

\setbeamertemplate{headline}[default]

\AtBeginPart{%
  \ifthenelse{\isundefined{\includePartPages}}{}{  %% if command def
    %% automatically add part pages when Part begins:
    { % block to bound effect of removing footline
      \setbeamertemplate{footline}{}  % no footline on part slides
      \begin{frame}
        \partpage
      \end{frame}
    }
  }
  \ifthenelse{\isundefined{\includeTocAtBeginPart}}{}{  %% if command def
    %% automatically also generate Outline slide with toc after Part begins
    \begin{frame}{Outline}
      \phantom{haha}%necessary to get the title typeset
      %
      {\Large \partname~\insertromanpartnumber: \insertpart\\}
      %
      \tableofcontents
    \end{frame}
  }
}

\AtBeginSection{%
  \ifthenelse{\isundefined{\includeTocAtBeginSection}}{}{  %% if command def
    %% automatically also generate Outline slide with toc after Section begins
    \begin{frame}{Outline}
      \phantom{haha}%necessary to get the title typeset
      %
      {\Large \partname~\insertromanpartnumber: \insertpart\\}
      %
      \tableofcontents[currentsection]
    \end{frame}
  }
}

\let\maketitleold\maketitle
\renewcommand{\maketitle}{ 
  {  % block to bound effect of removing footline
  \setbeamertemplate{footline}{}  % no footline on title slide
  \begin{frame}
    \maketitleold
  \end{frame}
  }  % end block
}


