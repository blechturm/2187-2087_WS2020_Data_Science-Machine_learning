\defbeamertemplate*{section in toc}{wu theme}
{\leavevmode\leftskip=1em%
  \textcolor{wulightblue}{%
    {\scriptsize\raise1.25pt\hbox{%
        \donotcoloroutermaths$\blacktriangleright$}%triangle
    }
  }~\inserttocsection\par
}

\defbeamertemplate*{subsection in toc}{wu theme}
{
  \leavevmode\leftskip=2em%
  \textcolor{wulightblue}{%
    {\tiny\raise1.5pt\hbox{%
        \donotcoloroutermaths$\blacktriangleright$}%triangle
    }
  }~\inserttocsubsection\par
}

\defbeamertemplate*{subsubsection in toc}{wu theme}
{
  \leavevmode\normalsize\usebeamerfont{subsection in toc}\leftskip=3em%
  \textcolor{wulightblue}{%
    {\tiny\raise1.5pt\hbox{%
        \donotcoloroutermaths$\blacktriangleright$}%triangle
    }
  }~\usebeamerfont{subsubsection in toc}\inserttocsubsubsection\par
}


\defbeamertemplate*{part page}{}[1][]
{
  \usebeamertemplate*{frametitle}
  \vskip 0.5em\par
  \hbox{%
      \begin{beamercolorbox}[wd=\paperwidth,ht=.85\paperheight,sep=.7cm,left,#1]{part title}
        \usebeamerfont{part name}{%
          \usebeamercolor[fg]{part name}\bfseries\partname~\insertromanpartnumber}\\
        \usebeamerfont{part title}\insertpart\par
        \vskip 5.7cm
      \end{beamercolorbox}
  }
}


