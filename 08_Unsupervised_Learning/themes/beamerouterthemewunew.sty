% Slide Title --> with logo
\setbeamertemplate{frametitle}
{
  \leavevmode%
  \vskip -1.4em%
  \hbox{%
    \hskip -.8em%
    \begin{beamercolorbox}[wd=.81\paperwidth,ht=4ex,dp=2.5ex,left,leftskip=1em,sep=0em,
        shadow=false,colsep=0ex]{frametitle}%
      \usebeamerfont{frametitle}\parbox{.77\paperwidth}{\insertframetitle}%
    \end{beamercolorbox}%
    \hskip -0.1em  % removes tiny space between the two colorboxes
    \begin{beamercolorbox}[wd=.2\paperwidth,ht=4ex,dp=2.5ex,right,rightskip=0.5cm,sep=-.2cm,
        shadow=false]{frametitle}%
      \insertlogo%
    \end{beamercolorbox}%
  }%
}


% Title page: default
\defbeamertemplate*{title page}{wu}[1][]
{
  %\vfill
  \vskip -0.5em\par
  \hbox{%
    % \begin{flushright}
    \begin{beamercolorbox}[wd=1.0\paperwidth,sep=1cm,right,#1,ht=.5\paperheight]{logo}
      \vskip2cm
      \pgfimage[height=2.5cm]{art/wulogo_karbon_2}%
    \end{beamercolorbox}%
  }%
  \vskip0.5em\par
  \hbox{%
    \begin{beamercolorbox}[wd=1.0\paperwidth,sep=.7cm,left,#1,ht=.5\paperheight]{title}
      \usebeamerfont{title}{\huge \inserttitle}\\[2ex]
      \ifthenelse{\isundefined{\programme}}{
        \ifthenelse{\isundefined{\course}}{
          % neither \course nor \programme defined, do nothing.
        }{ % only \course defined, print only that:
          \usebeamerfont{title}{\normalsize \course\\[2ex]}
        }
      }{
        \ifthenelse{\isundefined{\course}}{
          % only \programme defined, print only that:
          \usebeamerfont{title}{\normalsize \programme\\[2ex]}
        }{ % both \course and \programme defined, print both:
          \usebeamerfont{title}{\normalsize \programme \\ \course\\[2ex]}
        }
      }
      \usebeamerfont{title}{\Large \insertauthor, \insertinstitute\\ \normalsize \today\\}
    \end{beamercolorbox}
  }
    %{\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
    % \end{flushright}
  \vfill
}


