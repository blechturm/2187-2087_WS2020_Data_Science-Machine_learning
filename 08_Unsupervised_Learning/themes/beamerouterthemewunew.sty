\RequirePackage{ifthen}

\mode<presentation>

\setbeamercolor*{author in head/foot}{parent=palette tertiary}
\setbeamercolor*{title in head/foot}{parent=palette secondary}
\setbeamercolor*{date in head/foot}{parent=palette primary}

\setbeamercolor*{section in head/foot}{parent=palette tertiary}
\setbeamercolor*{subsection in head/foot}{parent=palette primary}

\definecolor{light-gray}{gray}{0.5}

\defbeamertemplate*{footline}{wu theme}
{%
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.9\paperwidth,ht=2.25ex,dp=1ex,left]{footlineelement}%
    \parbox{.9\paperwidth}{%  parbox to avoid nebulously appearing \hfill after this line
%      \usebeamerfont{footlineelement}%
      \hspace*{2ex}\ifthenelse{\thepart>0}%
              {\partname~\insertromanpartnumber: \insertpart}{}% print ``part'' only if exists
              \hfill\insertsection\hspace*{.1em}%  hspace to account for fixing -.1em below
    }%
  \end{beamercolorbox}%
  \hskip -0.1em  % removes tiny space between the two colorboxes
  \begin{beamercolorbox}[wd=.11\paperwidth,ht=2.25ex,dp=1ex,right]{footlineelement}%
    \insertframenumber{} / \inserttotalframenumber\hspace*{2ex}  %
  \end{beamercolorbox}%
  }%
  \vskip0pt%
}

\defbeamertemplate*{headline}{wu theme}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.25ex,dp=1ex,right]{section in head/foot}%
    \usebeamerfont{section in head/foot}\insertsectionhead\hspace*{2ex}%
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.25ex,dp=1ex,left]{subsection in head/foot}%
    \usebeamerfont{subsection in head/foot}\hspace*{2ex}\insertsubsectionhead%
  \end{beamercolorbox}}%
  \vskip0pt%
}


